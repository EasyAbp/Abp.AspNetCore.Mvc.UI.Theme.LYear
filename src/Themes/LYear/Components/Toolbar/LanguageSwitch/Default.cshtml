@using System.Linq
@model EasyAbp.Abp.AspNetCore.Mvc.UI.Theme.LYear.Themes.LYear.Components.Toolbar.LanguageSwitch.LanguageSwitchViewComponentModel
@if (Model.OtherLanguages.Any())
{
    <li class="dropdown">
        <a href="javascript:void(0)" data-toggle="dropdown" style="margin-right: 15px;">
            <span>@Model.CurrentLanguage.DisplayName<span class="caret"></span></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
            @foreach (var language in Model.OtherLanguages)
            {
                <li>
                    <a href="~/Abp/Languages/Switch?culture=@(language.CultureName)&uiCulture=@(language.UiCultureName)&returnUrl=@Context.Request.Path">@language.DisplayName</a>
                </li>
            }
        </ul>
    </li>
}